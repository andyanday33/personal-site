---
import Navbar from "../components/Navbar.astro";
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Anday.dev : Berke Anday Baloglu's Portfolio Website</title>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
    </head>
    <body>
        <Navbar />
        <header>
            <slot name="inside-header"/>
        </header>
        <main>
            <article id="about-summary">
                <slot />
            </article>
        </main>
    </body>
</html>

<style>
    body {
        font-family: 'Monaco', 'Times New Roman', 'Serif';
    }
    main {
        display: flex;
    }
    header {
        background-color: #DCD7C9;
        color: #3F4E4F;
        margin: 0px;
        padding: 4em;
        border-bottom: dotted 1px #2C3639;
        transition: padding 1s;
    }
    header:hover {
        padding: 5em;
        transition: padding 1s;
    }
    article#about-summary {
        border: 1px solid black;
        margin: 5px;
        padding: 5px;
        text-align: right;
        background-color: #2C3639;
        margin-left: auto;
        flex-grow: 1;
    }
</style>
---
import Layout from "../layouts/Layout.astro";
import Project from "../components/Project.astro";
import projectData from "../data/projects.json";
---
<Layout>
    <meta slot="inside-head" name="description" 
	content="projects page for Berke Anday Baloglu's portfolio/resume
		 website. Consists of a timeline and previous projects developed."/>
    <main>
        <h2>Projects</h2>
        <div class="vertical-line"></div>
        <section id="project-timeline">
            {projectData.projects.map((proj, i) => {
                const alignment = i % 2 == 0 ? "left" : "right";
                return (
                    <Project alignment={alignment} {...proj}/>
                );
            })}
        </section>
    </main>
</Layout>
<style>
    @media all and (max-width: 1000px) {
        .vertical-line {
            height: 105%;
            top: 12em;
        }
    }
    @media all and (min-width: 1000px) {
        .vertical-line {
            height: 120%;
            top: 9em;
        }
    }
    main {
        min-height: 100%;
        display: grid;
        grid-template-rows: 6em;
        background-color: #DCD7C9;
        overflow: visible;
        font-size: calc((.1em + .5vmin) + (.1em + .5vmax));
    }
    h2 {
        justify-self: center;
        color: #3F4E4F;
        width: fit-content;
        border-bottom: 1px solid #3F4E4F;
    }
    
    section#project-timeline {
        display: grid;
        grid-template-columns: 1fr 1fr;
        row-gap: 2em;
        align-items: center;
        min-height: 100%;
        max-width: 100%;
        padding-bottom: 5%;
    }
    .left {
        text-align: right;
    }
    .right {
        text-align: left;
    }
    .vertical-line {
        border-left: 3px dashed #3F4E4F;
        position: absolute;
        left: 50%;
        margin-left: -3px;
        z-index: 0;
    }
    
</style>
